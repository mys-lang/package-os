@test
func test_env_get_set_unset():
    try:
        message = ""
        getenv("FOOBAR")
    except OsError as e:
        message = e.message

    assert message == "environment variable 'FOOBAR' is not set"
    assert getenv("FOOBAR", "apple") == "apple"

    setenv("FOOBAR", "banan")
    assert getenv("FOOBAR") == "banan"

    unsetenv("FOOBAR")
    assert getenv("FOOBAR", None) is None

